
android_app {
    name: "FaceUnlockService",

    resource_dirs: ["res"],

    srcs: [
        "java/**/*.java",
    ],

    privileged: true,
    platform_apis: true,
    certificate: "platform",

    optimize: {
        enabled: false,
    },

    static_libs: [
        "androidx.annotation_annotation",
        "androidx.appcompat_appcompat",
        "lottie",
        "faceunlock_framework",
        "faceunlock_vendor_framework",
    ],
    required: [
        "privapp-permissions-org.lineageos.faceunlock",
        "hiddenapi-whitelist-org.lineageos.faceunlock",
        "faceunlock_vendor_dependencies",
    ],
}

prebuilt_etc {
    name: "privapp-permissions-org.lineageos.faceunlock",
    src: "privapp-permissions-org.lineageos.faceunlock.xml",
    sub_dir: "permissions",
    filename_from_src: true,
}

prebuilt_etc {
    name: "hiddenapi-whitelist-org.lineageos.faceunlock",
    src: "hiddenapi-whitelist-org.lineageos.faceunlock.xml",
    sub_dir: "sysconfig",
    filename_from_src: true,
}
